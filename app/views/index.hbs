<div class="modal fade" id="welcomeModal" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true"
  data-backdrop="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="modalLabel">Welcome to the Explorer Game</h5>
      </div>
      <div class="modal-body">
        Use the arrow buttons on the right side of the screen to navigate.
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" data-dismiss="modal">Continue</button>
      </div>
    </div>
  </div>
</div>

<div class="d-none" id="combat-display">
  <div class="d-flex justify-content-end">
    <div class="combat-display d-flex justify-content-center align-items-center">
      <button class="btn btn-primary btn-lg" onclick="continueFight()">Attack</button>
    </div>
  </div>
</div>

<div class="d-none" id="store-display">
  <div class="d-flex justify-content-end">
    <div class="stuff-display d-flex justify-content-center align-items-center">


      <div class="card background-brown" style="width: 200px;">
        <img class="card-img-top" src="">
        <div class="card-body">
          <h5 class="card-title">Sword</h5>
          <p class="card-text">Gives you 10 more attack points. Costs 10 gold coins.</p>
          <button class="btn btn-primary btn-lg" onclick="purchase(event)" data-item-name="sword">Buy</button>
        </div>
      </div>

      <div class="card background-brown" style="width: 200px;">
        <img class="card-img-top" src="">
        <div class="card-body">
          <h5 class="card-title">Shield</h5>
          <p class="card-text">Gives you 10 more defense points. Costs 10 gold coins.</p>
          <button class="btn btn-primary btn-lg" onclick="purchase(event)" data-item-name="shield">Buy</button>
        </div>
      </div>

      <div class="card background-brown" style="width: 200px;height:212px">
        <img class="card-img-top" src="">
        <div class="card-body">
          <h5 class="card-title">Exit</h5>
          <p class="card-text">Exit the store.</p>
          <button class="btn btn-primary btn-lg" onclick="purchase(event)">Exit</button>
        </div>
      </div>

    </div>
  </div>
</div>

<div class="d-flex justify-content-center">
  <div class="">
    <div class="sideBar d-flex flex-wrap">
      <div class="infoPanel d-flex align-items-center justify-content-center">
        <div>
          <h5 class="d-inline">Life Points: </h5>
          <span id="lifePoints"></span>
        </div>
      </div>
      <div class="infoPanel d-flex align-items-center justify-content-center">
        <div>
          <h5 class="d-inline">Attack Points: </h5>
          <span id="attackPoints"></span>
        </div>
      </div>
      <div class="infoPanel d-flex align-items-center justify-content-center">
        <div>
          <h5 class="d-inline">Defense Points: </h5>
          <span id="defensePoints"></span>
        </div>
      </div>
      <div class="infoPanel d-flex align-items-center justify-content-center">
        <div>
          <h5 class="d-inline">Gold Coins: </h5>
          <span id="goldCoins"></span>
        </div>
      </div>

    </div>
  </div>
  <div class="">
    <div class="display d-flex flex-wrap" id="exploreDisplay">
