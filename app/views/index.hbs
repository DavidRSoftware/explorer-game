      <div class="square-filler"></div>
      <div class="triangleLeft" onclick="moveCharacter(event)"></div>
      <div class="square-filler"></div>
      <div class="triangleRight" onclick="moveCharacter(event)"></div>
      <div class="square-filler"></div>
      <div class="triangleDown" onclick="moveCharacter(event)"></div>
      <div class="square-filler"></div>
